{% extends "UniteamPresentationBundle::pages_layout.html.twig" %}

{% block title %}NZ - Paysages{% endblock %}


{% block scriptassets %}
    <script src="{{ asset('bundles/uniteampresentation/js/gallery.js') }}"></script>
{% endblock %}

{% block main %}
    <div id="main">
        <div class="container">
            <div class="row"> 

                <!-- Content -->
                <div id="content" class="12u skel-cell-important">
                    <section>
                        <header>
                            <h2>Paysages</h2>
                            <span class="byline">Une terre de contrastes, entre neige et oc√©an</span>
                        </header>
                    </section>

                    <div class="images">
                        <a href="photos1" class="thumbsleft"><img src="{{ asset('bundles/uniteampresentation/images/thumbs/photos1.jpg') }}" alt="paysage1" /></a>
                        <a href="photos2" class="thumbsright"><img src="{{ asset('bundles/uniteampresentation/images/thumbs/photos2.jpg') }}" alt="paysage2" /></a>
                    </div>

                    <div class="images">
                        <a href="photos3" class="thumbsleft"><img src="{{ asset('bundles/uniteampresentation/images/thumbs/photos3.jpg') }}" alt="paysage3" /></a>
                        <a href="photos4" class="thumbsright"><img src="{{ asset('bundles/uniteampresentation/images/thumbs/photos4.jpg') }}" alt="paysage4" /></a>
                    </div>

                    <div class="imagesbottom">
                        <a href="photos5" class="thumbsleft"><img src="{{ asset('bundles/uniteampresentation/images/thumbs/photos5.jpg') }}" alt="paysage5" /></a>
                        <a href="photos6" class="thumbsright"><img src="{{ asset('bundles/uniteampresentation/images/thumbs/photos6.jpg') }}" alt="paysage6" /></a>
                    </div>

                </div>

                <div id="overlay"></div>

            </div>
        </div>
    </div>

{% endblock %}

{% block textsource %}{% endblock %}

{% block script %}
    <script>
        var src = "{{ asset('bundles/uniteampresentation/images/' ~ 'src' ~ '.jpg') }}";
        
        var linksLeft = document.getElementsByClassName('thumbsleft'),
                linksLenLeft = linksLeft.length;

        for (var i = 0; i < linksLenLeft; i++) {
            linksLeft[i].onclick = function () {
                displayImg(this, src);
                return false;
            };
        }

        var linksRight = document.getElementsByClassName('thumbsright'),
                linksLenRight = linksRight.length;

        for (var i = 0; i < linksLenRight; i++) {
            linksRight[i].onclick = function () {
                displayImg(this, src);
                return false;
            };
        }
        
        document.getElementById('overlay').onclick = function () {
            $(this).fadeOut("slow");
            document.getElementById('copyright').style.display = 'block';
        };
    </script>
{% endblock %}